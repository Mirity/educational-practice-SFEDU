{% layout "layout/default-layout.liquid", title: 'Clients' %}
{% block %}
    {% assign clients = this.getClients %}
    <div class="wrapper">
        {% include 'samples/table-header-client.liquid' %}
        {% for client in clients %}
            {% include 'samples/client-sample.liquid', client: client %}
        {% endfor %}
    </div>

    <form class="form" action="/client" method="post">
        <div class="form__item">
            <label class="form__label" for="name">Имя:</label>
            <input class="form__input" type="text" id="name" name="name">
        </div>

        <div class="form__item">
            <label class="form__label" for="surname">Фамилия:</label>
            <input class="form__input" type="text" id="surname" name="surname">
        </div>

        <div class="form__item">
            <label class="form__label" for="passport">Номер паспорта:</label>
            <input class="form__input" type="text" id="passport" name="passport">
        </div>

        <div class="form__item">
            <label class="form__label" for="password">Пароль:</label>
            <input class="form__input" type="text" id="password" name="password">
        </div>

        <button class="button button_submit" type="submit">Добавить</button>
    </form>
{% endblock %}