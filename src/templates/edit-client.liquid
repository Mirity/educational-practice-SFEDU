{% layout "layout/default-layout.liquid", title: 'Clients', isLoggedIn: isLoggedIn %}
{% block %}
{% assign clients = this.getClients %}

{% for client in clients %}
    {% include 'samples/client-sample.liquid', client: client %}
{% endfor %}
{% assign client = this.getClient %}
<form class="form" action="/edit-client" method="post">
    <div class="form__item">
        <label class="form__label"
               for="id"
        >
            ID:
        </label>
        <input class="form__input"
               value={{ client.id }}
               type="text"
               id="id"
               name="id"
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="name"
        >
            Имя:
        </label>
        <input class="form__input"
               value={{ client.name }}
               type="text"
               id="name"
               name="name"
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="surname"
        >
            Фамилия:
        </label>
        <input class="form__input"
               value={{ client.surname }}
               type="text"
               id="surname"
               name="surname"
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="surname"
        >
            Email:
        </label>
        <input class="form__input"
               value={{ client.email }}
               type="text"
               id="surname"
               name="surname"
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="passport"
        >
            Номер паспорта:
        </label>
        <input class="form__input"
               value={{ client.passport }}
               type="text"
               id="passport"
               name="passport"
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="password"
        >
            Пароль:
        </label>
        <input
                class="form__input"
                type="text"
                id="password"
                name="password"
                value={{ client.password }}
        >
    </div>

    <button class="button button_submit"
            type="submit"
    >
        Изменить
    </button>
</form>
{% endblock %}