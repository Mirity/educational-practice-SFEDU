<div class="login">
    <form class="form" action="/login" method="post">
        <div class="form__item">
            <input name="csrf_token" type="hidden" value={{ csrfToken }}>

            <label class="form__label"
                   for="email"
            >
                Email
            </label>
            <input class="form__input"
                   type="text"
                   id="email"
                   name="email"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="password"
            >
                Пароль:
            </label>
            <input class="form__input"
                   type="password"
                   id="password"
                   name="password"
            >
        </div>

        <button class="button button_submit"
                type="submit"
        >
            Войти
        </button>
    </form>
</div>