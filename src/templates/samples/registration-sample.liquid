<div class="registration">
    <form class="form" action="/registration" method="post">

        <input name="csrf_token" type="hidden" value={{ csrfToken }}>

        <div class="form__item">
            <label class="form__label"
                   for="email"
            >
                Email
            </label>
            <input class="form__input"
                   type="text"
                   id="email"
                   name="email"
            >
        </div>
        <div class="form__item">
            <label class="form__label"
                   for="name"
            >
                Имя:
            </label>
            <input class="form__input"
                   type="text"
                   id="name"
                   name="name"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="surname"
            >
                Фамилия:
            </label>
            <input class="form__input"
                   type="text"
                   id="surname"
                   name="surname"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="passport"
            >
                Номер паспорта:
            </label>
            <input class="form__input"
                   type="text"
                   id="passport"
                   name="passport"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="password"
            >
                Пароль:
            </label>
            <input class="form__input"
                   type="password"
                   id="password"
                   name="password"
            >
        </div>

        <button class="button button_submit"
                type="submit"
        >
            Регистрация
        </button>
    </form>
</div>