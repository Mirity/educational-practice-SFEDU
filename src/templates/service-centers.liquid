{% layout "layout/default-layout.liquid", title: 'Service centers', isLoggedIn: isLoggedIn %}
{% block %}
    {% assign serviceCenters = this.getServiceCenters %}
    <div class="wrapper">
        {% include 'samples/table-header-service-center.liquid' %}
        {% for serviceCenter in serviceCenters %}
            {% include 'samples/service-center-sample.liquid', serviceCenter: serviceCenter %}
        {% endfor %}
    </div>

    <form class="form" action="/service-center" method="post">
        <div class="form__item">
            <label class="form__label"
                   for="name"
            >
                Имя:
            </label>
            <input class="form__input"
                   type="text"
                   id="name"
                   name="name"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="country"
            >
                Страна:
            </label>
            <input class="form__input"
                   type="text"
                   id="country"
                   name="country"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="city"
            >
                Город:
            </label>

            <input class="form__input"
                   type="text"
                   id="city"
                   name="city"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="street"
            >
                Улица:
            </label>
            <input class="form__input"
                   type="text"
                   id="street"
                   name="street"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="house"
            >
                Дом:
            </label>
            <input class="form__input"
                   type="number"
                   id="house"
                   name="house"
            >
        </div>

        <div class="form__item">
            <label class="form__label"
                   for="number_seats"
            >
                Количество мест:
            </label>
            <input class="form__input"
                   type="number"
                   id="number_seats"
                   name="number_seats"
            >
        </div>

        <button class="button button_submit"
                type="submit"
        >
            Добавить
        </button>
    </form>
{% endblock %}